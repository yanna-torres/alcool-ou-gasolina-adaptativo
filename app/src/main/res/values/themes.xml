<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6622CC</item>
        <item name="colorPrimaryVariant">#6622CC</item>
        <item name="colorOnPrimary">#FDFDFD</item>
        <item name="colorPrimaryDark">#9A5FB2</item>

        <item name="android:statusBarColor">#460F98</item>
        <item name="android:backgroundTint">#FDFDFD</item>
        <item name="android:navigationBarColor">#6622CC</item>
        <item name="android:textColor">#212427</item>
    </style>

    <style name="TITLE">
        <item name="android:textColor">#6622CC</item>
    </style>

    <style name="LABEL">
        <item name="android:textColor">#212427</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SWITCH">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHighlight">#6622CC</item>
        <item name="android:textColorLink">#6622CC</item>
    </style>

    <style name="RESULT">
        <item name="android:textColor">#6622CC</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="INPUT">
        <item name="android:color">#6622CC</item>
        <item name="android:backgroundTint">#6622CC</item>
        <item name="android:textColorHint">#424447</item>
        <item name="android:textColor">#212427</item>
    </style>
</resources>